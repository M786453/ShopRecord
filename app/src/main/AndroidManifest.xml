<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.shoprecord"   >
    <uses-feature android:name="android.hardware.usb.host" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application

        android:allowBackup="false"
        android:icon="@drawable/record"
        android:label="@string/app_name"
        android:roundIcon="@drawable/record"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShopRecord"

        tools:replace="android:allowBackup">
        <activity android:name=".SingleBillActivity" />
        <activity android:name=".StoreActivity" />
        <activity android:name=".BillingActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>